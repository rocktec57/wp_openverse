set dotenv-load := false

COLOR := "\\033[0;32m"
NO_COLOR := "\\033[0m"

# Show all available recipes
@_default:
    printf "\n{{ COLOR }}# Frontend (path: \`frontend/\`)\n"
    printf "=============================={{ NO_COLOR }}\n"
    just --list --unsorted

# Install dependencies
install *args: && core-locales
    pnpm install --ignore-workspace {{ args }}

# Ensure that some core locales are present
core-locales:
    cp -r test/locales/* src/locales

# Run a package.json script via pnpm
run *args:
    pnpm run {{ args }}
